<p id="notice"><%= notice %></p>

<h1>Listing Ideas</h1>

<table class="table table-striped">
  <thead>
    <!-- row -->
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <!-- 3 columns for 3 buttons -->
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <!-- for loop -->
    <% @ideas.each do |idea| %>
      <tr>
        <!--  ruby code -->
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= image_tag(idea.picture_url,width: 100) if idea.picture.present? %></td>
        <!-- clearfix - overlap  -->
        <td><div class="dropdown">
          <!-- caret - little arrow -->
          <button class='btn btn-primary' type="button" data-toggle="dropdown">Actions <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><%= link_to 'Show', idea %></li>
            <li><%= link_to 'Edit', edit_idea_path(idea) %></li>
            <li><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>

        </div></td>
        <!-- btn make button cool -->
        <!-- <td><%= button_to 'Show', idea, class: "btn btn-primary" %></td> -->
        <!-- <td><%= button_to 'Edit', edit_idea_path(idea), class: "btn btn-primary"%></td>
        <td><%= button_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-primary" %></td>
      </tr> -->
    <% end %>
  </tbody>
</table>

